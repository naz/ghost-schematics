{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": [
    "src/utils",
    "src/lib",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/files/**"
  ]
}
